.preloaderWrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50px;
}

.preloader {
  display: block;
  border: 7px solid #f3f3f3;
  border-radius: 50%;
  border-top: 7px solid var(--color-blue-5f);
  width: 50px;
  height: 50px;
  animation: spin 2s linear infinite;
  margin-bottom: 15px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}